---
// Experience.astro
import ExperienceSection from "@/components/ExperienceSection";
import SplitText from "@/components/SplitText";
---

<section
  id="work"
  class="min-h-screen flex flex-col justify-center items-center relative px-4 md:px-8 bg-primary-3"
>
  <div class="max-w-7xl mx-auto w-full">
    <!-- Section Header -->
    <div class="text-center">
      <SplitText
        client:visible
        text="Work Experience"
        className="text-6xl font-semibold text-center"
        delay={100}
        duration={2}
        ease="elastic.out(1,0.3)"
        splitType="chars"
        from={{ opacity: 0, y: 40 }}
        to={{ opacity: 1, y: 0 }}
        threshold={0.1}
        rootMargin="-10px"
        splitType="lines"
        textAlign="left"
      />
      <div class="w-12 h-px bg-gray-400 mx-auto mb-6"></div>
      <p
        class="text-gray-600 text-lg font-light max-w-xl mx-auto leading-relaxed"
      >
        A journey through roles that shaped my professional growth
      </p>
    </div>

    <ExperienceSection client:visible />
  </div>
</section>
