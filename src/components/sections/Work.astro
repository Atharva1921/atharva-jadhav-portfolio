---
// Experience.astro
import WorkSection from "@/components/Work";
import SplitText from "@/components/SplitText";
---

<section
  id="work"
  class="h-screen flex flex-col justify-center items-center relative px-4 sm:px-6 md:px-8 lg:px-12 xl:px-16 bg-primary-2 py-4 sm:py-8 md:py-12 lg:py-16"
>
  <div class="w-full h-full flex md:flex-row flex-col gap-4">
    <!-- Section Header -->
    <div class="mb-12 sm:mb-16 md:mb-20">
      <div class="flex items-center gap-3 mb-4">
        <div class="flex items-center gap-1.5">
          <div class="w-3 h-3 rounded-full bg-red-500"></div>
          <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
          <div class="w-3 h-3 rounded-full bg-green-500"></div>
        </div>
        <span class="text-gray-400 text-sm font-mono">~/work-experience</span>
      </div>

      <h2
        class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-gray-900 mb-4 sm:mb-6"
      >
        Work Experience
      </h2>

      <p
        class="text-gray-600 text-base sm:text-lg md:text-xl max-w-2xl leading-relaxed"
      >
        A timeline of professional experiences and contributions that have
        shaped my development journey
      </p>
    </div>

    <WorkSection client:visible />
  </div>
</section>
