---
// Contact.astro
import { BorderBeam } from "../BorderBeam";
import SplitText from "../SplitText";
---

<section
  id="contact"
  class="min-h-screen flex flex-col justify-center items-center relative px-4 md:px-8 bg-primary-3"
>
  <div class="max-w-5xl mx-auto w-full">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <SplitText
        client:visible
        text="Contact"
        className="text-6xl font-semibold text-center"
        delay={100}
        duration={2}
        ease="elastic.out(1,0.3)"
        splitType="chars"
        from={{ opacity: 0, y: 40 }}
        to={{ opacity: 1, y: 0 }}
        threshold={0.1}
        rootMargin="-10px"
        splitType="lines"
        textAlign="left"
      />
      <div class="w-12 h-px bg-gray-400 mx-auto mb-6"></div>
      <p
        class="text-gray-600 text-lg font-light max-w-xl mx-auto leading-relaxed"
      >
        Let's discuss your next project or collaboration opportunity.
      </p>
    </div>

    <!-- Contact Cards Grid -->
    <div class="grid gap-6 md:gap-8 md:grid-cols-2 lg:grid-cols-3">
      <!-- Email Card -->
      <div
        class="relative group bg-white border border-gray-200 rounded-2xl p-8 hover:shadow-lg hover:shadow-gray-100 hover:border-gray-300 transition-all duration-300"
      >
        <div class="text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 rounded-full bg-gray-50 flex items-center justify-center mx-auto mb-4 group-hover:bg-gray-100 transition-colors duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-mail-icon lucide-mail"
                ><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"></path><rect
                  x="2"
                  y="4"
                  width="20"
                  height="16"
                  rx="2"></rect></svg
              >
            </div>
          </div>
          <h3 class="font-medium text-gray-900 text-lg mb-3">Email</h3>
          <p class="text-gray-500 text-sm mb-4 font-light">Drop me a message</p>
          <a
            href="mailto:yourname@gmail.com"
            class="text-gray-700 hover:text-gray-900 transition-colors duration-200 font-light"
          >
            atharvaja.10@gmail.com
          </a>
        </div>
        <BorderBeam
          client:load
          duration={8}
          size={100}
          initialOffset={0}
          borderRadius="rounded-2xl"
        />
      </div>

      <!-- Phone Card -->
      <div
        class="relative group bg-white border border-gray-200 rounded-2xl p-8 hover:shadow-lg hover:shadow-gray-100 hover:border-gray-300 transition-all duration-300"
      >
        <div class="text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 rounded-full bg-gray-50 flex items-center justify-center mx-auto mb-4 group-hover:bg-gray-100 transition-colors duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-phone-icon lucide-phone"
                ><path
                  d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"
                ></path></svg
              >
            </div>
          </div>
          <h3 class="font-medium text-gray-900 text-lg mb-3">Phone</h3>
          <p class="text-gray-500 text-sm mb-4 font-light">
            Available for calls
          </p>
          <a
            href="tel:+919892409341"
            class="text-gray-700 hover:text-gray-900 transition-colors duration-200 font-light"
          >
            +91 98924 09341
          </a>
        </div>
        <BorderBeam
          client:load
          duration={8}
          size={100}
          initialOffset={40}
          borderRadius="rounded-2xl"
        />
      </div>

      <!-- LinkedIn Card -->
      <div
        class="relative group bg-white border border-gray-200 rounded-2xl p-8 hover:shadow-lg hover:shadow-gray-100 hover:border-gray-300 transition-all duration-300 md:col-span-2 lg:col-span-1"
      >
        <div class="text-center">
          <div class="mb-6">
            <div
              class="w-16 h-16 rounded-full bg-gray-50 flex items-center justify-center mx-auto mb-4 group-hover:bg-gray-100 transition-colors duration-300"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-linkedin-icon lucide-linkedin"
                ><path
                  d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                ></path><rect width="4" height="12" x="2" y="9"></rect><circle
                  cx="4"
                  cy="4"
                  r="2"></circle></svg
              >
            </div>
          </div>
          <h3 class="font-medium text-gray-900 text-lg mb-3">LinkedIn</h3>
          <p class="text-gray-500 text-sm mb-4 font-light">
            Let's connect professionally
          </p>
          <a
            href="https://linkedin.com/in/yourusername"
            target="_blank"
            class="text-gray-700 hover:text-gray-900 transition-colors duration-200 font-light"
          >
            Connect with me
          </a>
        </div>
        <BorderBeam
          client:load
          duration={8}
          size={100}
          initialOffset={80}
          borderRadius="rounded-2xl"
        />
      </div>
    </div>

    <!-- Location Section -->
    <div class="mt-20 pt-16 border-t border-gray-200">
      <div class="text-center">
        <div class="mb-6">
          <div
            class="w-16 h-16 rounded-full bg-gray-50 flex items-center justify-center mx-auto mb-4"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-map-pin-icon lucide-map-pin"
              ><path
                d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"
              ></path><circle cx="12" cy="10" r="3"></circle></svg
            >
          </div>
        </div>
        <h3 class="font-medium text-gray-900 text-lg mb-3">Based in</h3>
        <p class="text-gray-600 font-light">Mumbai, India</p>
      </div>
    </div>
  </div>
</section>
